                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Column="1" Text="转发策略" Margin="0,0,4,0" HorizontalAlignment="Right"/>
                            <TextBox Grid.Column="2" x:Name="tbxTransPolicy" Margin="0,0,5,0" IsReadOnly="True" MaxLength="2" MaxLines="1"/>
                            <TextBox Grid.Column="3" x:Name="tbxTransPolicyNew"   Margin="5,0,0,0" MaxLength="2" MaxLines="1"/>
